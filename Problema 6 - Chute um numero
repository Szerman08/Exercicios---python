import random

# Gera um valor aleatório de 1 a 10
valor_aleatorio = random.randint(1, 10)

while True:
    # Recebe um chute do usuário
    chute = int(input("Digite um número entre 1 e 10: "))
    
    if chute < valor_aleatorio:
        print("Seu chute foi abaixo do valor aleatório.")
    elif chute > valor_aleatorio:
        print("Seu chute foi acima do valor aleatório.")
    else:
        print("Parabéns! Você acertou o valor aleatório.")
        break

